<style lang="scss">
  .plans {
    display: flex;
    gap: 4rem;
    margin: 4rem auto 0;

    @include mixin.tab {
      gap: 2.4rem;
    }

    @include mixin.sp {
      flex-direction: column;
      gap: 4rem;
    }

    &__info {
      width: 15rem;

      @include mixin.tab {
        display: none;
      }
    }

    &__info-list {
      font-weight: bold;
      background-color: #354851;
      border-radius: 1rem;
      box-shadow: 2rem 2rem 2rem var.$c-shadow;
      border: 0.2rem solid #354851;
      color: var.$c-white;
    }

    // 各列の高さ
    &__info-item {
      padding: 2rem;
      border-bottom: 1px solid rgba(var.$c-white, 0.1);

      &:last-child {
        border-bottom: none;
      }
    }

    &__item {
      background-color: var.$c-white;
      box-shadow: 2rem 2rem 2rem var.$c-shadow;
      padding: 2rem;
      border-bottom: 0.1rem solid rgba(var.$c-darkest, 0.05);

      @include mixin.tab {
        font-size: 1.5rem;
        border-bottom: none;
      }

      &.-head {
        color: var.$c-white;
        border-radius: calc(1rem - 3px) calc(1rem - 3px) 0 0;
        overflow: visible;
        padding: 0;
        text-align: center;
      }

      // 標準プラン・オーダーメイドプランの料金のitem
      &.-price,
      &.-custom-price {
        @include mixin.sp {
          padding-bottom: 0;
        }
      }

      &:last-child {
        border-radius: 0 0 calc(1rem - 3px) calc(1rem - 3px);
      }

      small {
        font-weight: 500;
        font-size: 1.3rem;
        color: var.$c-black-l-2;
      }
    }

    &__col {
      flex: 1;

      &.-standard {
        .plans__list {
          border: 3px solid #5bbed8;
        }

        .-head {
          background: linear-gradient(
            135deg,
            #5bbed8 0%,
            #4aadc7 70%,
            #3a9bb8 100%
          ) !important;
          color: var.$c-white !important;
          border: none;
          // box-shadow: 0 8px 32px rgba(91, 190, 216, 0.4);
          position: relative;

          .plans__badge {
            background: var.$c-white;
            color: #5bbed8;
            border: 2px solid #5bbed8;
          }
        }
      }

      &.-custom {
        .plans__list {
          border: 3px solid var.$c-gr-01;
        }

        .-head {
          background: linear-gradient(
            135deg,
            var.$c-gr-01 0%,
            #628dd7 70%,
            #4a6bc4 100%
          ) !important;
          color: var.$c-white !important;
          border: none;
          // box-shadow: 0 8px 32px rgba(98, 141, 215, 0.4);
          position: relative;

          .plans__badge {
            background: var.$c-white;
            color: var.$c-gr-01;
            border: 2px solid var.$c-gr-01;
          }
        }
      }
    }

    &__list {
      font-weight: 500;
      border-radius: 1rem;
      position: relative;
    }

    &__item-head {
      display: none;
      font-weight: 600;
      padding: 0.6rem 1.2rem;
      margin-bottom: 1.2rem;
      text-align: center;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
      background: var.$c-white-bg;

      @include mixin.tab {
        display: flex;
      }
    }

    &__badge {
      position: absolute;
      top: -12px;
      left: 50%;
      transform: translateX(-50%);
      color: white;
      font-size: 1.2rem;
      font-weight: bold;
      padding: 0.4rem 1.6rem;
      border-radius: 20px;
      z-index: 1;
    }

    &__head-main {
      padding: 4rem 2rem 3rem;
      text-align: center;
    }

    &__title {
      font-size: 2.6rem;
      font-weight: 800;
      margin-bottom: 0.8rem;
      letter-spacing: -0.02em;

      @include mixin.sp {
        font-size: 2.2rem;
      }
    }

    &__subtitle {
      font-size: 1.4rem;
      font-weight: 500;
      opacity: 0.8;
      margin: 0;
    }

    &__pricing {
      display: flex;
      justify-content: center;

      @include mixin.tab {
        padding-top: 2.4rem;
      }

      @include mixin.sp {
        padding-top: 1.2rem;
      }
    }

    &__pricing-center {
      display: flex;
      flex-direction: column;
      gap: 0.4rem;
    }

    &__original-price,
    &__sale-price {
      display: flex;
      align-items: center;
      gap: 0.8rem;
    }

    &__price-label {
      font-size: 1.1rem;
      font-weight: 500;
      padding: 0.4rem 0.4rem;
      color: var.$c-white;
      width: 8rem;
      text-align: center;
      flex-shrink: 0;
      white-space: nowrap;
    }

    &__original-price .plans__price-label {
      background-color: var.$c-darkest;
    }

    &__sale-price .plans__price-label {
      background-color: #5bbed8;
    }

    &__price-value {
      font-family: var.$font-manrope;
      font-weight: 700;
      font-size: 2.4rem;
      letter-spacing: -0.02em;

      &.-strikethrough {
        text-decoration: line-through;
        font-size: 2.2rem;
        color: var.$c-black;
        opacity: 0.6;
      }

      &.-highlight {
        font-size: 4rem;
        font-weight: 800;
        color: #5bbed8;

        span {
          font-size: 2.4rem;
        }

        @include mixin.tab {
          font-size: 3.6rem;
        }

        @include mixin.sp {
          font-size: 3.2rem;

          span {
            font-size: 2.2rem;
          }
        }
      }
    }

    &__price-with-tax {
      display: flex;
      align-items: baseline;
      justify-content: center;
      gap: 0.5rem;
    }

    &__tax-note {
      font-size: 1.1rem;
      color: #5bbed8;
      font-weight: 600;

      &.-original {
        color: var.$c-black;
        opacity: 0.6;
        font-size: 1rem;
      }
    }

    &__custom-price {
      font-size: 2.8rem;
      font-weight: 800;
      font-family: var.$font-manrope;
      color: var.$c-gr-01;
      text-align: center;
      letter-spacing: -0.02em;
      margin-top: 2.4rem;

      @include mixin.tab {
        margin-top: 6rem;
      }

      @include mixin.sp {
        font-size: 2.4rem;
        margin-top: 2rem;
      }
    }

    &__features,
    &__plus {
      margin: 0;
      padding: 0;
      list-style: none;

      li {
        padding: 0.4rem 0;
        line-height: 1.5;

        &:last-child {
          border-bottom: none;
        }
      }
    }

    &__features {
      li {
        &::before {
          content: "✓";
          color: var.$c-main;
          font-weight: 700;
          margin-right: 0.8rem;
        }
      }
    }

    &__plus {
      li {
        &::before {
          content: "+";
          color: var.$c-main;
          font-size: 1.8rem;
          font-weight: 500;
          margin-right: 0.8rem;
          line-height: 1;
        }
      }
    }

    &__col {
      &.-custom {
        .plans__features li::before,
        .plans__plus li::before {
          color: var.$c-gr-01;
        }
      }
    }

    &__note {
      font-size: 1rem;
      display: inline-block;
      transform: translateY(-0.2rem);
      color: var.$c-black-l-2;
    }

    // Heights

    &__info-list {
      margin-top: 13.6rem;
    }

    &__info-item:nth-child(1),
    &__item:nth-child(2) {
      min-height: 13rem;

      @include mixin.tab {
        min-height: 19.8rem;
      }

      @include mixin.sp {
        min-height: 0;
      }
    }

    &__info-item:nth-child(3),
    &__item:nth-child(4) {
      min-height: 23.3rem;

      @include mixin.tab {
        min-height: 26.6rem;
      }

      @include mixin.sp {
        min-height: 0;
      }
    }

    &__info-item:nth-child(5),
    &__item:nth-child(6) {
      min-height: 8.9rem;

      @include mixin.tab {
        min-height: 12.7rem;
      }

      @include mixin.sp {
        min-height: 0;
      }
    }

    &__info-item:nth-child(7),
    &__item:nth-child(8) {
      min-height: 29.7rem;

      @include mixin.tab {
        min-height: 33rem;
      }

      @include mixin.sp {
        min-height: 0;
      }
    }
  }
</style>
